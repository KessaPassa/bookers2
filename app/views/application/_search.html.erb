<%= form_with url: searches_path, method: :get, local: true, class: 'mb-3' do |f| %>
  <%= f.text_field :keyword %>
  <%= f.select(:model_name, [['User', 'User'], ['Book', 'Book']]) %>
  <%= f.select(:matching_kind, [['完全一致', 0], ['前方一致', 1], ['後方一致', 2], ['部分一致', 3]]) %>
  <%= f.submit "検索" %>
<% end %>
