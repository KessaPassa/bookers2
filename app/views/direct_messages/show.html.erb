<%= @receiver.name %>さんとのチャット
<% @direct_messages.each do |dm| %>
  <p><%= dm.body %></p>
<% end %>
<%= form_with model: @direct_message, local: true do |f| %>
  <%= render 'layouts/errors', obj: @direct_message %>
  <%= f.hidden_field :receiver_id, value: @receiver.id %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
