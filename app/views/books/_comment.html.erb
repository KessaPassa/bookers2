<tr id="book-comment-<%= comment.id %>">
  <td>
    <%= link_to(comment.user) do %>
      <%= image_tag comment.user.get_profile_image, size: "50x50" %><br>
      <%= comment.user.name %>
    <% end %>
  </td>
  <td><%= comment.content %></td>
  <td><%= link_to(book_comment_path(book_id: comment.book.id, id: comment.id), method: :delete, remote: true,
                  data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger") do %>
      Destroy
    <% end %>
  </td>
</tr>
