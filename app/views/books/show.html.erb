<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to(@book.user) do %>
              <%= image_tag @book.user.get_profile_image, size: "100x100" %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td><div id="star-rate-<%= @book.id %>"></div></td>
          <% if @book.user.correct_user?(current_user) %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </table>
      <table class='pb-3'>
        <tbody id="book-comments">
        <% @book_comments.each do |comment| %>
          <%= render 'comment', comment: comment %>
        <% end %>
        </tbody>
      </table>
      <%= form_with model: Book::Comment.new, url: book_comments_path(@book), local: false do |f| %>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control', required: true %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
  </div>
</div>

<script>
    $('#star-rate-<%= @book.id %>').empty();
    raty($('#star-rate-<%= @book.id%>')[0], {
        starOff: '<%= image_path('star-off.png') %>',
        starOn: '<%= image_path('star-on.png') %>',
        half: false,
        readOnly: true,
        score: <%= @book.star || 0 %>,
    });
</script>
